{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "skribe",
    "version": "0.1.0",
    "identifier": "com.skribe.app",
    "build": {
        "frontendDist": "../src"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "Skribe",
                "width": 500,
                "height": 450,
                "decorations": false,
                "minHeight": 160,
                "minWidth": 300
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/icon.svg",
            "icons/icon.ico"
        ]
    }
}